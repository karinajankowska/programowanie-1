#include <stdio.h>
#include <stdlib.h>
#include <time.h>


int sum(int tab[], int rozmiar){
    int suma = 0;
    int i;
    for(i = 0;i < rozmiar;i++){
        suma += tab[i];
    }
    return suma;
}

int min(int tab[], int rozmiar){
    int min = tab[0];
    int i;
    for(i = 0;i < rozmiar;i++){
        if(min > tab[i]){
            min = tab[i];
        }
    }
    return min;
}

int max(int tab[], int rozmiar){
    int max = tab[0];
    int i;
    for(i = 0;i < rozmiar;i++){
        if(max < tab[i]){
            max = tab[i];
        }
    }
    return max;
}

float avg(int tab[], int rozmiar){
    float avg = sum(tab,rozmiar)/(rozmiar*1.0);
    return avg;
}

int main()
{
    //int tab[8] = {6,4,7,12,25,9,5,8}; 
    int tab[8];
    int i;
    int range = 200;
    int rozmiar = sizeof(tab)/sizeof(tab[0]);
    for(i = 0;i < rozmiar;i++){
       tab[i] = rand() % range + 1;
    }
    
    //printf("%d\n", rozmiar);
    for(i = 0;i < rozmiar;i++){
       printf("%d\n",tab[i]);
    }
    printf("Suma elementów w tablicy to: %d\n", sum(tab,rozmiar));
    printf("Najmniejszy element w tablicy to: %d\n", min(tab,rozmiar));
    printf("Największy element w tablicy to: %d\n", max(tab,rozmiar));
    printf("Średnia wartość elementów w tablicy to: %.2f\n", avg(tab,rozmiar));
    return 0;
}
