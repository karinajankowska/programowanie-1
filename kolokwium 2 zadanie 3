#include <stdio.h>
int max(int tab[], int rozmiar){
    int max1;
    max1 = tab[0];
    int i;
    for(i=0; i<rozmiar; i++){
        if(max1 < tab[i]){
        max1 = tab[i];
    }
}
return max1;
}

int min(int tab[], int rozmiar){
    int min = tab[0];
    int i;
    for(i=0; i<rozmiar; i++){
        if(min > tab[i]){
        min = tab[i];
    }
}
return min;
}

int suma(int tab[], int rozmiar){
    int suma = 0;
    int i;
    for(i=0; i<6; i++){
        suma += tab[i];
    }
return suma;
    
}

int main()
{
   int tab[6];
  
   int i;
   int range = 300;
   int rozmiar = sizeof(tab)/sizeof(tab[0]);
   for(i=0; i<6; i++){
       tab[i] = rand () % range + 1;
       //tab[i] = rand () % range - 1;
   }
   for(i=0; i<rozmiar; i++){
      printf("%d\n", tab[i]);
   }
   printf("NajwiÄ™kszy element to %d\n", max(tab, rozmiar));
   printf("Najmniejszy element to %d\n", min(tab, rozmiar));
   printf("Suma elementÃ³w w tablicy to %d\n", suma(tab, rozmiar));

    return 0;
}
